<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/productsListFragment"
        android:name="com.example.meli_challenge.ui.products.products_list.ProductsListFragment"
        android:label="fragment_products_list"
        tools:layout="@layout/fragment_products_list" >
        <action
            android:id="@+id/action_productsListFragment_to_prodtuctDetailFragment"
            app:destination="@id/prodtuctDetailFragment" />
        <argument
            android:name="query"
            app:argType="string" />
        <argument
            android:name="category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/prodtuctDetailFragment"
        android:name="com.example.meli_challenge.ui.products.product_detail.ProductDetailFragment"
        android:label="fragment_prodtuct_detail"
        tools:layout="@layout/fragment_prodtuct_detail" >
        <argument android:name="productId" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.meli_challenge.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_productsListFragment"
            app:destination="@id/productsListFragment" />
    </fragment>
</navigation>